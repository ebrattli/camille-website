---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import camilleHighDefImage from "../images/camille-high-def.webp";

const title = "Helping You Show Up Online with Confidence";
const subtitle = `At Tarsier Digital Solutions, we empower purpose-driven brands
with simple, effective, and beautiful marketing.`;

const services = [
  {
    icon: "mdi:target",
    title: "Strategy",
    description:
      "Custom marketing plans to guide your brand's growth and connect with your ideal audience.",
  },
  {
    icon: "mdi:pencil",
    title: "Content Creation",
    description:
      "Engaging social media posts, graphics, and videos that showcase your brand's unique story.",
  },
  {
    icon: "mdi:bullhorn",
    title: "Paid Advertising",
    description:
      "Targeted Meta and Google ad campaigns to reach new customers and grow your business.",
  },
  {
    icon: "mdi:star",
    title: "Branding",
    description:
      "Visual identity and messaging that creates consistency and recognition for your business.",
  },
];
---

<Layout title={title}>
  <PageHero title={title} subtitle={subtitle} />
  <div class="flex justify-center gap-4 py-6">
    <a href="/contact" class="btn btn-primary">
      Book a Free Strategy Call
      <Icon name="mdi:arrow-right" class="size-5 ml-1" />
    </a>
  </div>

  <section class="bg-gray-50 py-12 md:py-16 lg:py-20" id="services" aria-labelledby="services-heading">
    <div class="container mx-auto px-4">
      <h2 id="services-heading" class="mb-8 md:mb-12 text-center text-3xl font-bold">Our Services</h2>

      <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-4">
        {
          services.map((service) => (
            <ServiceCard
              icon={service.icon}
              title={service.title}
              description={service.description}
            />
          ))
        }
      </div>

      <div class="mt-10 flex justify-center">
        <a href="/services" class="btn btn-secondary">
          View All Services
          <Icon name="mdi:chevron-right" class="size-5 ml-1" />
        </a>
      </div>
    </div>
  </section>

  <section class="bg-white py-12 md:py-16 lg:py-20" id="about" aria-labelledby="about-heading">
    <div class="container mx-auto px-4">
      <div class="flex flex-col items-center gap-8 md:gap-12 lg:flex-row">
        <div class="lg:w-1/2">
          <h2 id="about-heading" class="mb-4 md:mb-6 text-center text-3xl font-bold lg:text-left">
            Meet Camille Nicole
          </h2>
          <p class="mb-4 md:mb-6 leading-relaxed text-gray-700">
            Former educator turned digital marketer, I combine my passion for
            teaching with strategic marketing to help purpose-driven brands tell
            their story.
          </p>
          <p class="mb-6 md:mb-8 leading-relaxed text-gray-700">
            With experience working with multicultural and immigrant-led
            businesses, I bring an international perspective to help your brand
            connect authentically with your audience.
          </p>
          <div class="flex justify-center lg:justify-start">
            <a href="/about" class="btn btn-primary">
              Learn More About Me
              <Icon name="mdi:chevron-right" class="size-5 ml-1" />
            </a>
          </div>
        </div>
        <div class="lg:w-1/2">
          <Image
            src={camilleHighDefImage}
            alt="Camille Nicole, Digital Marketing Specialist"
            class="mx-auto rounded-lg shadow-lg w-full max-w-lg h-auto"
            widths={[400, 800, 1200]}
            sizes="(max-width: 767px) 90vw, (max-width: 1023px) 70vw, 50vw"
            quality={90}
            loading="eager"
            format="webp"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>