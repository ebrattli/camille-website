---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import FaqAccordion from "../components/FaqAccordion.astro";
import ContactInfo from "../components/ContactInfo.astro";
import ContactForm from "../components/ContactForm.astro";
import SocialLinks from "../components/SocialLinks.astro";

import BackToTop from "../components/BackToTop.astro";
import { Icon } from "astro-icon/components";

// Define contact information items
const contactItems = [
  {
    icon: "mdi:email",
    title: "Email",
    content: "Let's talk about your project",
    link: "mailto:camilleyambao220@gmail.com",
    linkText: "camilleyambao220@gmail.com",
  },
  {
    icon: "mdi:phone",
    title: "Phone",
    content: "Call me for a quick chat",
    link: "tel:+4712345678",
    linkText: "+47 123 45 678",
  },
  {
    icon: "mdi:map-marker",
    title: "Location",
    content: "Based in Oslo, Norway",
    link: "https://maps.app.goo.gl/JK7mJrP5mLZLWBLx8",
    linkText: "View on map",
  },
  {
    icon: "mdi:clock",
    title: "Business Hours",
    content: [
      "Monday - Friday: 9:00 - 17:00",
      "Saturday: By appointment",
      "Sunday: Closed",
    ],
  },
];

// Define social media links
const socialLinks = [
  {
    platform: "LinkedIn",
    url: "https://linkedin.com/",
    icon: "mdi:linkedin",
    label: "LinkedIn",
  },
  {
    platform: "Instagram",
    url: "https://instagram.com/",
    icon: "mdi:instagram",
    label: "Instagram",
  },
  {
    platform: "Facebook",
    url: "https://facebook.com/",
    icon: "mdi:facebook",
    label: "Facebook",
  },
  {
    platform: "Twitter",
    url: "https://twitter.com/",
    icon: "mdi:twitter",
    label: "Twitter",
  },
];

// Define form fields
const formFields = [
  {
    id: "name",
    label: "Name",
    type: "text" as const,
    placeholder: "Your name",
    required: true,
  },
  {
    id: "email",
    label: "Email",
    type: "email" as const,
    placeholder: "Your email address",
    required: true,
  },
  {
    id: "phone",
    label: "Phone (optional)",
    type: "tel" as const,
    placeholder: "Your phone number",
  },
  {
    id: "subject",
    label: "Subject",
    type: "select" as const,
    required: true,
    options: [
      { value: "", label: "Select a subject", disabled: true, selected: true },
      { value: "General Inquiry", label: "General Inquiry" },
      { value: "Service Question", label: "Service Question" },
      { value: "Booking Request", label: "Booking Request" },
      { value: "Pricing Information", label: "Pricing Information" },
      { value: "Other", label: "Other" },
    ],
  },
  {
    id: "message",
    label: "Message",
    type: "textarea" as const,
    placeholder: "Your message",
    required: true,
  },
  {
    id: "privacy",
    label:
      "I agree to the privacy policy and consent to being contacted regarding my inquiry.",
    type: "checkbox" as const,
    required: true,
  },
];

// Define FAQs
const faqs = [
  {
    question: "How quickly do you respond to inquiries?",
    answer:
      "I typically respond to all inquiries within 24-48 business hours. For urgent matters, please indicate this in your message subject.",
  },
  {
    question: "Do you offer consultations before signing a contract?",
    answer:
      "Yes, I offer a free 30-minute consultation to discuss your needs and determine if we're a good fit to work together.",
  },
  {
    question: "What information should I include in my initial inquiry?",
    answer:
      "To help me provide the most relevant response, please include details about your business, your goals, your timeline, and your budget range if applicable.",
  },
  {
    question: "Can we meet in person or is everything done virtually?",
    answer:
      "I'm based in Oslo, Norway and can meet clients in person within the Oslo area. For clients outside Oslo, I offer virtual meetings via Zoom or your preferred platform.",
  },
  {
    question: "What payment methods do you accept?",
    answer:
      "I accept bank transfers, credit cards, and Vipps for Norwegian clients. Payment terms and methods will be outlined in our service agreement.",
  },
];
---

<Layout
  title="Contact | Camille's Digital Marketing"
  description="Get in touch with Camille's Digital Marketing for professional social media and digital marketing services."
>
  <div class="space-y-16">
    <PageHero
      title="Let's Get in Touch"
      subtitle="I'd love to hear about your project and how I can help"
    />

    <!-- Introduction Section -->
    <section class="mx-auto mb-16 max-w-4xl px-4 text-center">
      <div
        class="bg-base-100 border-primary rounded-lg border-t-4 p-8 shadow-md"
      >
        <p class="text-lg leading-relaxed">
          Whether you're ready to elevate your digital presence or just have
          questions about my services, I'm here to help. Fill out the form below
          or use the contact information provided to get in touch.
        </p>
        <div class="mt-6 flex justify-center">
          <a href="#contact-form-section" class="btn btn-primary btn-sm">
            <Icon name="mdi:arrow-down" class="mr-1 h-4 w-4" />
            Contact Me Now
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Information Section -->
    <section class="mx-auto mb-16 max-w-4xl px-4">
      <h2 class="mb-8 text-center text-2xl font-bold">Contact Information</h2>
      <ContactInfo items={contactItems} />
    </section>

    <!-- Social Media Section -->
    <section class="mx-auto mb-16 max-w-4xl px-4">
      <div class="bg-base-100 rounded-lg p-8 shadow-md">
        <h2 class="mb-6 text-center text-2xl font-bold">Connect With Me</h2>
        <p class="mb-8 text-center">
          Follow me on social media for updates, tips, and more
        </p>
        <SocialLinks links={socialLinks} showLabels={true} />
      </div>
    </section>

    <!-- Contact Form Section -->
    <section id="contact-form-section" class="mx-auto mb-16 max-w-6xl px-4">
      <div class="space-y-12">
        <!-- Contact Form - Full Width -->
        <div class="w-full">
          <ContactForm
            title="Send Me a Message"
            fields={formFields}
            submitText="Send Message"
          />
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-base-200 px-4 py-16">
      <div class="mx-auto max-w-6xl">
        <FaqAccordion
          title="Frequently Asked Questions"
          items={faqs}
          accordionName="contact-faq"
        />
      </div>
    </section>
  </div>
  <BackToTop showAtPixels={500} />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
