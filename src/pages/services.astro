---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import ServicePackageCard from "../components/ServicePackageCard.astro";
import ProcessSteps from "../components/ProcessSteps.astro";
import FaqAccordion from "../components/FaqAccordion.astro";
import CallToAction from "../components/CallToAction.astro";
import { Icon } from "astro-icon/components";
import { createLayoutProps } from "../lib/layout-helpers";
import type { SEOConfig } from "../types/seo";

const seo: SEOConfig = createLayoutProps("services");

// Define packages
const packages = [
  {
    title: "Basic",
    price: "4,000 NOK",
    popular: false,
    features: [
      { text: "8 social media posts per month", included: true },
      { text: "Content creation for 1 platform", included: true },
      { text: "Monthly performance report", included: true },
      { text: "Basic audience growth strategy", included: true },
      { text: "Engagement monitoring", included: false },
      { text: "Competitor analysis", included: false },
      { text: "Hashtag strategy", included: false },
      { text: "Influencer outreach", included: false },
    ],
  },
  {
    title: "Standard",
    price: "8,000 NOK",
    popular: true,
    features: [
      { text: "16 social media posts per month", included: true },
      { text: "Content creation for 2 platforms", included: true },
      { text: "Bi-weekly performance reports", included: true },
      { text: "Audience growth strategy", included: true },
      { text: "Engagement monitoring and response", included: true },
      { text: "Competitor analysis", included: false },
      { text: "Hashtag strategy", included: false },
      { text: "Influencer outreach", included: false },
    ],
  },
  {
    title: "Premium",
    price: "12,000 NOK",
    popular: false,
    features: [
      { text: "24 social media posts per month", included: true },
      { text: "Content creation for 3 platforms", included: true },
      { text: "Weekly performance reports", included: true },
      { text: "Advanced audience growth strategy", included: true },
      { text: "Engagement monitoring and response", included: true },
      { text: "Competitor analysis", included: true },
      { text: "Hashtag strategy", included: true },
      { text: "Influencer outreach", included: false },
    ],
  },
  {
    title: "Enterprise",
    price: "20,000 NOK",
    popular: false,
    features: [
      { text: "40 social media posts per month", included: true },
      { text: "Content creation for all platforms", included: true },
      { text: "Weekly reports with strategy calls", included: true },
      { text: "Comprehensive growth strategy", included: true },
      { text: "Priority engagement management", included: true },
      { text: "In-depth competitor analysis", included: true },
      { text: "Custom hashtag strategy", included: true },
      { text: "Influencer outreach", included: true },
    ],
  },
];

// Define process steps
const processSteps = [
  {
    title: "Consultation",
    description:
      "We start with a thorough consultation to understand your business, goals, target audience, and current social media presence.",
  },
  {
    title: "Strategy",
    description:
      "Based on our consultation, I develop a customized social media strategy tailored to your specific needs and objectives.",
  },
  {
    title: "Implementation",
    description:
      "Once the strategy is approved, I begin creating and scheduling content, engaging with your audience, and implementing growth tactics.",
  },
  {
    title: "Analysis & Optimization",
    description:
      "I continuously monitor performance, provide regular reports, and optimize the strategy based on data and results.",
  },
];

// Define FAQs
const faqs = [
  {
    question: "Which social media platforms do you work with?",
    answer:
      "I specialize in Instagram, Facebook, LinkedIn, Twitter, TikTok, and Pinterest. The platforms we focus on will depend on your business goals and target audience.",
  },
  {
    question: "Do you create the content or do I need to provide it?",
    answer:
      "I create all the content for your social media channels, including graphics, captions, and hashtags. You're welcome to provide input and brand assets, but I handle the creative process.",
  },
  {
    question: "How long does it take to see results?",
    answer:
      "Social media marketing is a long-term strategy. While you may see engagement improvements within the first month, significant growth in followers and business results typically takes 3-6 months of consistent effort.",
  },
  {
    question: "Can I upgrade or downgrade my package?",
    answer:
      "Yes, you can change your package at any time with 30 days' notice. I'm flexible and understand that your needs may change as your business grows.",
  },
  {
    question: "Do you offer one-time services or only monthly packages?",
    answer:
      "While I primarily offer monthly packages for ongoing social media management, I also provide one-time services such as social media audits, strategy development, and content creation workshops. Contact me for custom quotes.",
  },
];
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  structuredData={seo.structuredData}
>
  <div class="space-y-20">
    <PageHero
      title="Professional Digital Marketing Services"
      subtitle="Comprehensive social media marketing packages designed to grow your brand's online presence and engage your target audience"
    />

    <!-- Introduction Section -->
    <section class="mx-auto max-w-4xl text-center">
      <h2 class="mb-4 text-2xl font-bold">
        Elevate Your Social Media Presence
      </h2>
      <p class="mb-4">
        In today's digital landscape, a strong social media presence is
        essential for business growth. I offer comprehensive social media
        marketing services designed to increase your brand visibility, engage
        your target audience, and drive meaningful results.
      </p>
      <p>
        Whether you're just starting out or looking to take your existing social
        media to the next level, I have a package that fits your needs and
        budget.
      </p>
    </section>

    <!-- Services Overview -->
    <section class="bg-base-200 px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-8 text-center text-2xl font-bold">What I Offer</h2>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
          <div class="card bg-base-100 shadow-md">
            <div class="card-body items-center text-center">
              <div class="text-primary mb-2">
                <Icon name="mdi:pencil" class="h-12 w-12" />
              </div>
              <h3 class="card-title">Content Creation</h3>
              <p class="text-base-content/70">
                Engaging posts that connect with your audience and reflect your
                brand voice
              </p>
            </div>
          </div>

          <div class="card bg-base-100 shadow-md">
            <div class="card-body items-center text-center">
              <div class="text-primary mb-2">
                <Icon name="mdi:account-group" class="h-12 w-12" />
              </div>
              <h3 class="card-title">Community Management</h3>
              <p class="text-base-content/70">
                Building loyal followers through consistent engagement and
                relationship building
              </p>
            </div>
          </div>

          <div class="card bg-base-100 shadow-md">
            <div class="card-body items-center text-center">
              <div class="text-primary mb-2">
                <Icon name="mdi:chart-line" class="h-12 w-12" />
              </div>
              <h3 class="card-title">Growth Strategy</h3>
              <p class="text-base-content/70">
                Data-driven approaches to expand your reach and increase your
                following
              </p>
            </div>
          </div>

          <div class="card bg-base-100 shadow-md">
            <div class="card-body items-center text-center">
              <div class="text-primary mb-2">
                <Icon name="mdi:file-document-edit" class="h-12 w-12" />
              </div>
              <h3 class="card-title">Performance Reports</h3>
              <p class="text-base-content/70">
                Transparent results with detailed analytics and actionable
                insights
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Packages Section -->
    <section
      class="bg-base-100 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:20px_20px] py-12"
    >
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-10 text-center text-2xl font-bold">
          Social Media Marketing Packages
        </h2>
        <div class="grid grid-cols-1 gap-8 px-4 md:grid-cols-2 lg:grid-cols-4">
          {
            packages.map((pkg) => (
              <ServicePackageCard
                title={pkg.title}
                price={pkg.price}
                features={pkg.features}
                popular={pkg.popular}
              />
            ))
          }
        </div>
        <p
          class="text-base-content/60 mx-auto mt-10 max-w-2xl text-center text-sm"
        >
          All packages require a minimum 3-month commitment. Prices are subject
          to change. Custom packages are available upon request.
        </p>
      </div>
    </section>

    <!-- Process Section -->
    <ProcessSteps title="My Process" steps={processSteps} />

    <!-- FAQ Section -->
    <section class="bg-base-200 px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <FaqAccordion
          title="Frequently Asked Questions"
          items={faqs}
          accordionName="services-faq"
        />
      </div>
    </section>

    <!-- Call to Action -->
    <CallToAction
      title="Ready to Transform Your Social Media?"
      buttonText="Book a Free Consultation"
      buttonLink="/contact"
    >
      Let's discuss how I can help you achieve your social media goals and take
      your online presence to the next level.
    </CallToAction>
  </div>
</Layout>
