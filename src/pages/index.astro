---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import camilleHighDefImage from "../images/camille-high-def.webp";

const title = "Digital Marketing Services for Purpose-Driven Brands";
const heroTitle = "Helping You Show Up Online with Confidence";
const subtitle = `At Tarsier Digital Solutions, we empower purpose-driven brands
with simple, effective, and beautiful marketing.`;

const seoDescription =
  "Expert digital marketing services including social media strategy, content creation, Meta & Google ads, and branding for purpose-driven small businesses. Get a free strategy call today.";

const seoKeywords =
  "digital marketing services, social media marketing, Meta ads, Google ads, content creation, branding, small business marketing, purpose-driven brands, marketing strategy, paid advertising";

// Structured data for homepage
const homepageStructuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Tarsier Digital Solutions",
  alternateName: "Tarsier Digital",
  description: seoDescription,
  url: "https://tarsierdigital.com",
  logo: "https://tarsierdigital.com/images/logo.png",
  founder: {
    "@type": "Person",
    name: "Camille Nicole",
    jobTitle: "Digital Marketing Specialist & Founder",
    description:
      "Former educator turned digital marketer specializing in helping purpose-driven brands tell their story.",
    image: "https://tarsierdigital.com/images/camille-high-def.webp",
  },
  address: {
    "@type": "PostalAddress",
    addressCountry: "US",
  },
  contactPoint: {
    "@type": "ContactPoint",
    contactType: "customer service",
    email: "hello@tarsierdigital.com",
    availableLanguage: ["English"],
  },
  service: [
    {
      "@type": "Service",
      name: "Digital Marketing Strategy",
      description:
        "Custom marketing plans to guide your brand's growth and connect with your ideal audience.",
    },
    {
      "@type": "Service",
      name: "Content Creation",
      description:
        "Engaging social media posts, graphics, and videos that showcase your brand's unique story.",
    },
    {
      "@type": "Service",
      name: "Paid Advertising",
      description:
        "Targeted Meta and Google ad campaigns to reach new customers and grow your business.",
    },
    {
      "@type": "Service",
      name: "Branding Services",
      description:
        "Visual identity and messaging that creates consistency and recognition for your business.",
    },
  ],
  areaServed: "Worldwide",
  knowsAbout: [
    "Digital Marketing",
    "Social Media Marketing",
    "Content Creation",
    "Paid Advertising",
    "Meta Ads",
    "Google Ads",
    "Brand Development",
  ],
  sameAs: [
    "https://www.linkedin.com/company/tarsier-digital-solutions",
    "https://www.instagram.com/tarsierdigital",
    "https://www.facebook.com/tarsierdigital",
  ],
};

const services = [
  {
    icon: "mdi:target",
    title: "Strategy",
    description:
      "Custom marketing plans to guide your brand's growth and connect with your ideal audience.",
  },
  {
    icon: "mdi:pencil",
    title: "Content Creation",
    description:
      "Engaging social media posts, graphics, and videos that showcase your brand's unique story.",
  },
  {
    icon: "mdi:bullhorn",
    title: "Paid Advertising",
    description:
      "Targeted Meta and Google ad campaigns to reach new customers and grow your business.",
  },
  {
    icon: "mdi:star",
    title: "Branding",
    description:
      "Visual identity and messaging that creates consistency and recognition for your business.",
  },
];
---

<Layout
  title={title}
  description={seoDescription}
  keywords={seoKeywords}
  ogImage="/images/og-homepage.jpg"
  ogType="website"
  structuredData={homepageStructuredData}
>
  <PageHero title={heroTitle} subtitle={subtitle} />
  <div class="flex justify-center gap-4 py-6">
    <a href="/contact" class="btn btn-primary btn-lg">
      Book a Free Strategy Call
      <Icon name="mdi:arrow-right" class="ml-1 size-5" />
    </a>
  </div>

  <section
    class="bg-base-100 py-12 md:py-16 lg:py-20"
    id="services"
    aria-labelledby="services-heading"
  >
    <div class="container mx-auto px-4">
      <h2
        id="services-heading"
        class="text-base-content mb-8 text-center text-3xl font-bold md:mb-12"
      >
        Digital Marketing Services
      </h2>
      <p
        class="text-base-content/80 mx-auto mb-8 max-w-3xl text-center text-lg"
      >
        Comprehensive digital marketing solutions designed to help
        purpose-driven brands grow their online presence and connect with their
        ideal customers.
      </p>

      <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-4">
        {
          services.map((service) => (
            <ServiceCard
              icon={service.icon}
              title={service.title}
              description={service.description}
            />
          ))
        }
      </div>

      <div class="mt-10 flex justify-center">
        <a href="/services" class="btn btn-secondary btn-outline">
          View All Services
          <Icon name="mdi:chevron-right" class="ml-1 size-5" />
        </a>
      </div>
    </div>
  </section>

  <section
    class="bg-base-100 py-12 md:py-16 lg:py-20"
    id="about"
    aria-labelledby="about-heading"
  >
    <div class="container mx-auto px-4">
      <div class="flex flex-col items-center gap-8 md:gap-12 lg:flex-row">
        <div class="lg:w-1/2">
          <h2
            id="about-heading"
            class="text-base-content mb-4 text-center text-3xl font-bold md:mb-6 lg:text-left"
          >
            Meet Camille Nicole
          </h2>
          <p class="text-base-content/80 mb-4 leading-relaxed md:mb-6">
            Former educator turned digital marketer, I combine my passion for
            teaching with strategic marketing to help purpose-driven brands tell
            their story and grow their online presence.
          </p>
          <p class="text-base-content/80 mb-6 leading-relaxed md:mb-8">
            With extensive experience working with multicultural and
            immigrant-led businesses, I bring an international perspective and
            cultural sensitivity to help your brand connect authentically with
            diverse audiences through targeted digital marketing strategies.
          </p>
          <div class="flex justify-center lg:justify-start">
            <a href="/about" class="btn btn-primary btn-md">
              Learn More About Me
              <Icon name="mdi:chevron-right" class="ml-1 size-5" />
            </a>
          </div>
        </div>
        <div class="lg:w-1/2">
          <div class="avatar mx-auto max-w-lg">
            <div class="mask mask-squircle w-full shadow-lg">
              <Image
                src={camilleHighDefImage}
                alt="Camille Nicole, Digital Marketing Specialist and Founder of Tarsier Digital Solutions"
                class="object-cover"
                widths={[400, 800, 1200]}
                sizes="(max-width: 767px) 90vw, (max-width: 1023px) 70vw, 50vw"
                quality={90}
                loading="eager"
                format="webp"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
