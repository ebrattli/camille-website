---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  imagePlaceholder?: {
    icon: string;
    text: string;
  };
}

const {
  title,
  imagePlaceholder = {
    icon: "mdi:image",
    text: "Image placeholder"
  }
} = Astro.props;
---

<div class="card bg-base-100 shadow-xl max-w-4xl mx-auto">
  <div class="card-body">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h2 class="card-title text-3xl font-bold text-base-content mb-4">{title}</h2>
        <div class="prose text-gray-700">
          <slot />
        </div>
      </div>
      <div class="relative h-64 md:h-auto rounded-lg overflow-hidden bg-base-200 flex items-center justify-center">
        <!-- Placeholder for image -->
        <div class="text-secondary text-center p-8">
          <Icon name={imagePlaceholder.icon} class="h-16 w-16 mx-auto mb-4" />
          <p>{imagePlaceholder.text}</p>
        </div>
      </div>
    </div>
  </div>
</div>
