---
import { Icon } from "astro-icon/components";
import SocialLinks from "./SocialLinks.astro";

interface Props {
  siteTitle?: string;
}

const { siteTitle = "Tarsier Digital Solutions" } = Astro.props;

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    platform: "Facebook",
    url: "https://facebook.com/tarsierdigital",
    icon: "mdi:facebook",
    label: "Facebook",
  },
  {
    platform: "Instagram",
    url: "https://instagram.com/tarsierdigital",
    icon: "mdi:instagram",
    label: "Instagram",
  },
  {
    platform: "LinkedIn",
    url: "https://linkedin.com/company/tarsierdigital",
    icon: "mdi:linkedin",
    label: "LinkedIn",
  },
];

const navigationLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about/" },
  { name: "Services", href: "/services/" },
  { name: "Portfolio", href: "/portfolio/" },
  { name: "Contact", href: "/contact/" },
];

const serviceLinks = [
  { name: "Strategy", href: "/services/#strategy" },
  { name: "Content Creation", href: "/services/#content" },
  { name: "Paid Advertising", href: "/services/#advertising" },
  { name: "Branding", href: "/services/#branding" },
];
---

<footer class="bg-base-200 text-base-content">
  <div class="container mx-auto px-4 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand & Description -->
      <div class="lg:col-span-1">
        <h3 class="text-primary mb-4 text-xl font-bold">{siteTitle}</h3>
        <p class="text-base-content/80 mb-6 leading-relaxed">
          Empowering purpose-driven brands with simple, effective, and beautiful
          marketing solutions.
        </p>
        <SocialLinks links={socialLinks} className="flex gap-3" />
      </div>

      <!-- Navigation Links -->
      <div>
        <h4 class="mb-4 text-lg font-semibold">Navigation</h4>
        <ul class="space-y-2">
          {
            navigationLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-base-content/80 hover:text-primary transition-colors duration-200"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="mb-4 text-lg font-semibold">Services</h4>
        <ul class="space-y-2">
          {
            serviceLinks.map((service) => (
              <li>
                <a
                  href={service.href}
                  class="text-base-content/80 hover:text-primary transition-colors duration-200"
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="mb-4 text-lg font-semibold">Get In Touch</h4>
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <Icon name="mdi:email" class="text-primary size-5" />
            <a
              href="mailto:hello@tarsierdigital.com"
              class="text-base-content/80 hover:text-primary transition-colors duration-200"
            >
              hello@tarsierdigital.com
            </a>
          </div>

          <div class="flex items-center gap-2">
            <Icon name="mdi:phone" class="text-primary size-5" />
            <a
              href="tel:+1234567890"
              class="text-base-content/80 hover:text-primary transition-colors duration-200"
            >
              (123) 456-7890
            </a>
          </div>

          <div class="flex items-start gap-2">
            <Icon name="mdi:map-marker" class="text-primary mt-0.5 size-5" />
            <span class="text-base-content/80">
              Based in Oslo<br />
              Serving clients worldwide
            </span>
          </div>
        </div>

        <div class="mt-6">
          <a href="/contact/" class="btn btn-primary btn-sm">
            Book a Free Call
            <Icon name="mdi:arrow-right" class="ml-1 size-4" />
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="divider my-8"></div>

    <div
      class="text-base-content/60 flex flex-col items-center justify-between gap-4 text-sm sm:flex-row"
    >
      <div>
        &copy; {currentYear}
        {siteTitle}. All rights reserved.
      </div>
    </div>
  </div>
</footer>
