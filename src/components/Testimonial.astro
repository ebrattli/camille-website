---
interface Props {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  category?: string;
  imageUrl?: string;
}

const { quote, author, role, company, category, imageUrl } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div
  class="card bg-base-100 shadow-lg transition-all duration-300 hover:shadow-xl"
>
  <div class="card-body px-6 py-8 md:px-10">
    <div class="mb-3 flex items-start">
      <div class="text-primary text-5xl opacity-60">"</div>
    </div>
    <p class="text-base-content mb-8 text-lg leading-relaxed italic md:text-xl">
      {quote}
    </p>
    <div class="flex items-end justify-end">
      <div class="text-primary text-5xl opacity-60">"</div>
    </div>

    <div
      class="border-base-300 mt-6 flex flex-wrap items-center gap-3 border-t pt-4"
    >
      {
        imageUrl ? (
          <div class="avatar mr-4">
            <div class="ring-primary ring-offset-base-100 h-16 w-16 rounded-full ring ring-offset-2">
              <img src={imageUrl} alt={author} />
            </div>
          </div>
        ) : (
          <div class="avatar placeholder mr-4">
            <div class="bg-primary text-primary-content h-16 w-16 rounded-full">
              <Icon name="mdi:account" class="h-8 w-8" />
            </div>
          </div>
        )
      }
      <div class="flex-1">
        <p class="text-lg font-bold">{author}</p>
        {
          (role || company) && (
            <p class="text-base-content/70 text-sm">
              {role && <span>{role}</span>}
              {role && company && <span> at </span>}
              {company && <span class="font-medium">{company}</span>}
            </p>
          )
        }
      </div>
      {category && <div class="badge badge-primary badge-lg">{category}</div>}
    </div>
  </div>
</div>
