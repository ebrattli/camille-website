---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  name: string;
  role: string;
  photoIcon?: string;
}

const {
  title,
  name,
  role,
  photoIcon = "mdi:account"
} = Astro.props;
---

<div class="max-w-4xl mx-auto">
  <h2 class="text-3xl font-bold text-base-content mb-8 text-center">{title}</h2>

  <div class="card bg-base-100 shadow-xl mx-auto max-w-2xl">
    <figure class="h-64 bg-base-200 flex items-center justify-center">
      <!-- Placeholder for photo -->
      <Icon name={photoIcon} class="h-16 w-16 text-secondary" />
    </figure>
    <div class="card-body">
      <h3 class="card-title text-xl font-semibold text-base-content">{name}</h3>
      <p class="text-primary-content mb-4">{role}</p>
      <div class="text-gray-700">
        <slot />
      </div>
    </div>
  </div>
</div>
