---
import { Icon } from 'astro-icon/components';

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
  label?: string;
}

interface Props {
  links: SocialLink[];
  title?: string;
  showLabels?: boolean;
  className?: string;
}

const {
  links,
  title,
  showLabels = false,
  className = "flex justify-center gap-4"
} = Astro.props;
---

<div class="social-links">
  {title && <h3 class="text-lg font-semibold mb-4 text-center">{title}</h3>}

  <div class={className}>
    {links.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link group"
        aria-label={`Visit ${link.platform}`}
      >
        <div class="bg-base-200 p-4 rounded-full transition-all duration-300
                    group-hover:bg-primary group-hover:text-primary-content
                    group-hover:shadow-md transform group-hover:scale-110 group-hover:-translate-y-1
                    border-2 border-transparent group-hover:border-primary/20">
          <Icon name={link.icon} class="w-7 h-7" />
        </div>
        {showLabels && link.label && (
          <span class="mt-3 text-sm font-medium block text-center">{link.label || link.platform}</span>
        )}
      </a>
    ))}
  </div>
</div>

<style>
  .social-link {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }
</style>
