---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="hero">
  <div class="hero-content py-12 text-center">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-primary text-5xl font-bold">{title}</h1>
      {subtitle && <p class="text-base-content py-6 text-xl">{subtitle}</p>}
      <div class="divider divider-primary mx-auto w-1/2"></div>
    </div>
  </div>
</div>
