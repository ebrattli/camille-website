---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="hero">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold text-base-content">{title}</h1>
      {subtitle && (
        <p class="py-6 text-xl text-primary">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</div>
