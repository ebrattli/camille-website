---
import { Image } from "astro:assets";
import tarsierLogo from "../images/tarsier-logo.png";

// Define props interface
interface Props {
  siteTitle?: string;
}

// Get props with default values
const { siteTitle } = Astro.props;

// Navigation links
const navItems = [
  { text: "Home", href: "/" },
  { text: "Services", href: "/services" },
  { text: "Portfolio", href: "/portfolio" },
  { text: "About", href: "/about" },
  { text: "Contact", href: "/contact" },
];
---

<div
  class="navbar bg-base-200 shadow-sm"
>
  <div class="navbar-start">
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center gap-3">
        <Image src={tarsierLogo} alt="Tarsier Logo" width={40} height={40} class="w-10 h-10" />
        <span class="text-primary-content text-xl font-bold">{siteTitle}</span>
      </a>
    </div>
  </div>

  <div class="navbar-center hidden md:flex">
    <ul class="menu menu-horizontal gap-2">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-base-content hover:text-primary transition-colors px-3 py-2 font-medium"
            >
              {item.text}
            </a>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="navbar-end">
    <!-- Call to action button -->
    <a
      href="/contact"
      class="btn btn-primary btn-sm md:btn-md rounded-full px-4 font-medium shadow-md hover:shadow-lg transition-all md:px-6"
    >
      Book Now
    </a>
  </div>
</div>
