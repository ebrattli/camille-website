---
// Define props interface
interface Props {
  siteTitle?: string;
}

// Get props with default values
const { siteTitle } = Astro.props;

// Navigation links
const navItems = [
  { text: "Home", href: "/" },
  { text: "Services", href: "/services" },
  { text: "Portfolio", href: "/portfolio" },
  {
    text: "About",
    href: "#",
    hasDropdown: true,
    dropdownItems: [
      { text: "About Me", href: "/about" },
      { text: "About Tarsier", href: "/about-business" },
    ],
  },
  { text: "Contact", href: "/contact" },
];
---

<div
  class="navbar bg-base-200 flex flex-row items-center justify-between shadow-sm"
>
  <div class="navbar-start">
    <div class="flex-shrink-0">
      <!-- You can replace this with an actual logo later -->
      <a href="/" class="text-primary-content text-xl font-bold">{siteTitle}</a>
    </div>
  </div>

  <div class="navbar-center hidden md:block">
    <ul class="flex space-x-6">
      {
        navItems.map((item) => (
          <li class={item.hasDropdown ? "dropdown dropdown-hover" : ""}>
            <a
              href={item.href}
              class="text-base-content/80 hover:text-primary-content flex items-center px-2 py-1 font-medium"
              tabindex={item.hasDropdown ? "0" : undefined}
            >
              {item.text}
              {item.hasDropdown && <span class="ml-1 text-xs">â–¼</span>}
            </a>
            {item.hasDropdown && (
              <ul class="dropdown-content menu bg-base-100 rounded-box z-[1] mt-2 w-52 p-2 shadow-md">
                {item.dropdownItems.map((dropItem) => (
                  <li>
                    <a
                      href={dropItem.href}
                      class="text-base-content/80 hover:text-primary-content hover:bg-base-200"
                    >
                      {dropItem.text}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>
  </div>

  <div class="navbar-end">
    <!-- Call to action button -->
    <a
      href="/contact"
      class="btn btn-primary btn-sm md:btn-md rounded-full px-4 font-medium shadow-md hover:shadow-lg md:px-6"
    >
      Book Now
    </a>
  </div>
</div>
