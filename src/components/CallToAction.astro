---
interface Props {
  title: string;
  buttonText: string;
  buttonLink: string;
}

const { title, buttonText, buttonLink } = Astro.props;
---

<div class="hero mx-auto max-w-3xl">
  <div class="hero-content text-center">
    <div>
      <h2 class="text-base-content text-2xl font-bold">{title}</h2>
      <p class="py-6 text-gray-700">
        <slot />
      </p>
      <a href={buttonLink} class="btn btn-primary">{buttonText}</a>
    </div>
  </div>
</div>
