---
import ValueCard from './ValueCard.astro';

interface Props {
  title: string;
  missionStatement: string;
  coreValues?: {
    title: string;
    description: string;
  }[];
  approachValues?: {
    title: string;
    description: string;
  }[];
}

const {
  title,
  missionStatement,
  coreValues = [],
  approachValues = []
} = Astro.props;
---

<div class="max-w-4xl mx-auto">
  <h2 class="text-3xl font-bold text-base-content mb-8 text-center">{title}</h2>

  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <h3 class="card-title text-2xl font-semibold text-primary">Mission</h3>
      <p class="text-gray-700">
        {missionStatement}
      </p>
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-8">
    {coreValues.length > 0 && (
      <ValueCard title="Core Values" values={coreValues} />
    )}

    {approachValues.length > 0 && (
      <ValueCard title="My Approach" values={approachValues} />
    )}

    <slot />
  </div>
</div>
