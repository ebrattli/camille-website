---
interface Step {
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
  title?: string;
}

const { steps, title } = Astro.props;
---

<div class="py-12 bg-base-100">
  <div class="max-w-6xl mx-auto px-4">
    {title && <h2 class="text-2xl font-bold text-center mb-10">{title}</h2>}

    <div class="w-full">
      <!-- Horizontal steps for desktop -->
      <ul class="steps steps-horizontal w-full hidden md:flex mb-8">
        {steps.map((step, index) => (
          <li class={`step ${index <= 0 ? 'step-primary' : ''}`}>
            <span class="font-medium">{step.title}</span>
          </li>
        ))}
      </ul>

      <!-- Vertical steps for mobile -->
      <ul class="steps steps-vertical w-full md:hidden mb-8">
        {steps.map((step, index) => (
          <li class={`step ${index <= 0 ? 'step-primary' : ''}`}>
            <span class="font-medium">{step.title}</span>
          </li>
        ))}
      </ul>

      <!-- Step descriptions -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {steps.map((step, index) => (
          <div class="card bg-base-200 shadow-md border border-base-300 hover:shadow-lg transition-shadow">
            <div class="card-body">
              <div class="flex items-center gap-3 mb-2">
                <div class="badge badge-primary badge-lg">{index + 1}</div>
                <h3 class="card-title text-primary">{step.title}</h3>
              </div>
              <p class="text-base-content/80">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
