---
interface Step {
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
  title?: string;
}

const { steps, title } = Astro.props;
---

<div class="bg-base-100 py-12">
  <div class="mx-auto max-w-6xl px-4">
    {title && <h2 class="mb-10 text-center text-2xl font-bold">{title}</h2>}

    <div class="w-full">
      <!-- Horizontal steps for desktop -->
      <ul class="steps steps-horizontal mb-8 hidden w-full md:flex">
        {
          steps.map((step, index) => (
            <li class={`step ${index <= 0 ? "step-primary" : ""}`}>
              <span class="font-medium">{step.title}</span>
            </li>
          ))
        }
      </ul>

      <!-- Vertical steps for mobile -->
      <ul class="steps steps-vertical mb-8 w-full md:hidden">
        {
          steps.map((step, index) => (
            <li class={`step ${index <= 0 ? "step-primary" : ""}`}>
              <span class="font-medium">{step.title}</span>
            </li>
          ))
        }
      </ul>

      <!-- Step descriptions -->
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
        {
          steps.map((step, index) => (
            <div class="card bg-base-200 border-base-300 border shadow-md transition-shadow hover:shadow-lg">
              <div class="card-body">
                <div class="mb-2 flex items-center gap-3">
                  <div class="badge badge-primary badge-lg">{index + 1}</div>
                  <h3 class="card-title text-primary-content">{step.title}</h3>
                </div>
                <p class="text-base-content/80">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
